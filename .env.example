# Django Environment Configuration
# Copy this file to .env and update the values

# SECURITY WARNING: Generate a new secret key for production
# You can generate one at: https://djecrety.ir/
SECRET_KEY=your-secret-key-here

# SECURITY WARNING: Never set DEBUG=True in production
DEBUG=False

# Add your domain names or IP addresses
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration (for production, consider PostgreSQL)
DATABASE_URL=sqlite:///db.sqlite3

# Time Zone
TIME_ZONE=Asia/Shanghai

# Media and Static Files
MEDIA_ROOT=./media/
STATIC_ROOT=./static/

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0

# For development only
DEV_MODE=False